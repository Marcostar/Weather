<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                   android:layout_height="40dp">


    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent">

        <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="2dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="2dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp"/>

        <ImageView
                android:id="@+id/icon"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@+id/day" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/highTemp" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:id="@+id/highTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="89" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="2dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="2dp" app:layout_constraintEnd_toStartOf="@+id/lowTemp"
                android:layout_marginEnd="4dp"/>

        <TextView
                android:id="@+id/lowTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="89" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="4dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="2dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="2dp"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>